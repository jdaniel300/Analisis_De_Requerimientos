name: dockercompose6334892999736409937
services:
  accionsocial.web:
    build:
      context: D:\ProyectosVS\PrograAvanzada\DiseñoDesarrollo\Analisis_De_Requerimientos\AccionSocial
      dockerfile: AccionSocial.web/Dockerfile
    container_name: accionsocial.web
    depends_on:
      sqlserver:
        condition: service_started
        required: true
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_HTTP_PORTS: "8080"
      ASPNETCORE_HTTPS_PORTS: "8081"
      ConnectionStrings__Database: Server=sqlserver;Database=AccionDB;User Id=sa;Password=AccionSocialDb123!;TrustServerCertificate=True
    image: accionsocial.web
    networks:
      accion-network: null
    ports:
      - mode: ingress
        target: 8080
        published: "8090"
        protocol: tcp
      - mode: ingress
        target: 8080
        protocol: tcp
      - mode: ingress
        target: 8081
        protocol: tcp
    restart: on-failure
    volumes:
      - type: bind
        source: C:\Users\mija2\AppData\Roaming/Microsoft/UserSecrets
        target: /home/app/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\mija2\AppData\Roaming/Microsoft/UserSecrets
        target: /root/.microsoft/usersecrets
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\mija2\AppData\Roaming/ASP.NET/Https
        target: /home/app/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
      - type: bind
        source: C:\Users\mija2\AppData\Roaming/ASP.NET/Https
        target: /root/.aspnet/https
        read_only: true
        bind:
          create_host_path: true
  sqlserver:
    build:
      context: D:\ProyectosVS\PrograAvanzada\DiseñoDesarrollo\Analisis_De_Requerimientos\AccionSocial
      dockerfile: AccionSocial.web/Dockerfile.sqlserver
    command:
      - /bin/bash
      - -c
      - |
        # Install SQL tools
        apt-get update && apt-get install -y curl gnupg
        curl https://packages.microsoft.com/keys/microsoft.asc | apt-key add -
        curl https://packages.microsoft.com/config/ubuntu/20.04/prod.list > /etc/apt/sources.list.d/mssql-release.list
        apt-get update
        ACCEPT_EULA=Y apt-get install -y mssql-tools
        # Start SQL Server
        /opt/mssql/bin/sqlservr
    container_name: sqlserver
    deploy:
      resources:
        limits:
          cpus: 2
          memory: "4294967296"
    environment:
      ACCEPT_EULA: "Y"
      MSSQL_COLLATION: Latin1_General_CI_AS
      MSSQL_LCID: "1033"
      MSSQL_MEMORY_LIMIT_MB: "4096"
      MSSQL_PID: Express
      MSSQL_REMOTE_ACCESS_ENABLED: "1"
      SA_PASSWORD: AccionSocialDb123!
    healthcheck:
      test:
        - CMD-SHELL
        - /opt/mssql-tools/bin/sqlcmd -S localhost -U sa -P $$SA_PASSWORD -Q "SELECT 1" || exit 1
      timeout: 20s
      interval: 20s
      retries: 10
      start_period: 3m0s
    image: custom-sqlserver
    networks:
      accion-network: null
    ports:
      - mode: ingress
        target: 1433
        published: "1433"
        protocol: tcp
    volumes:
      - type: volume
        source: sql_data
        target: /var/opt/mssql
        volume: {}
networks:
  accion-network:
    name: dockercompose6334892999736409937_accion-network
    driver: bridge
volumes:
  sql_data:
    name: dockercompose6334892999736409937_sql_data